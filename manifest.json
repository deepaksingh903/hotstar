{
	  "name": "Free-HotStar",
 "description": "Free-HotStar",
 "version": "1.0",

  "permissions": [
   "tabs", "http://*/*", "https://*/*"
  ],
  	  "browser_action": {
      "default_title": "Free-HotStar",
      "default_icon": "icon.png",
      "default_popup": "views/popup.html"
  },
	"content_scripts": [
    {
      "matches": ["https://www.hotstar.com/*"],

      "js": ["js/main.js"]
    }
  ],
	  "manifest_version": 2
	}
